#ifndef LASERKILLACTION_CEU
#define LASERKILLACTION_CEU

#include "../../c.ceu"
#include "../../sdl.ceu"
#include "../../engine/display/scene_context.ceu"
#include "../iaction.ceu"
#include "../ipingu.ceu"
#include "../state_sprite.ceu"

class LaserKillAction with
    interface IAction;
    interface IPinguAction;
do
    pingu.ceu_action = &this;

    function (int a) => bool change_allowed do
        return true;
    end

    catchable = false;

    function @rec (void) => Vector3f get_center_pos do
        var Vector3f result = pingu.get_pos();
        result.y = result.y - 16;
        return result;
    end

    function (void) => _const_char_string get_name do
        return _get_screenname(_A_LASERKILL);
    end

    var StateSprite sprite;
    sprite.load_file(_DIR_LEFT,  "other/laser_kill/left");
    sprite.load_file(_DIR_RIGHT, "other/laser_kill/right");

    par do
        every global:e_PINGU_UPDATE_ALL do
            if sprite.get(pingu.direction().value):is_finished() then
                escape _A_DEAD;
            else
                sprite.get(pingu.direction().value):update();
            end
        end
    with
        every gc in pingu.e_DRAW_CALLED do
            _gc_color_draw2(gc, sprite.get(pingu.direction().value), _toVector3f(pingu.get_pos()) + _Vector3f(0, 2));
        end
    end
end

#endif
